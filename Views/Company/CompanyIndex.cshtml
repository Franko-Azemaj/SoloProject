@model Job
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light p-2">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item mx-3 text-center">
                        <a class="nav-link  text-white btn btn-primary" asp-area="" asp-controller="Company"
                            asp-action="logOut">LogOut</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<main>
    <div id="body">
        <div class="col-sm-3 side-bar">
                <a class="btn btn-primary" href="/jobs/new">List a New Job Position</a>
                <div class="">
                    <div class="header">Positions to fill</div>
                    <div class="jobs ">
                        @foreach (var job in ViewBag.AllPositions)
                        {
                            <a href="jobs/@job.JobId">@job.Name</a>
                        }
                    </div>
                </div>
            </div>
        <div class="content">
            
            <div >

                @foreach (var item in ViewBag.AllDevs)
                {
                    <div class="match-item  mb-2">
                        <div class="top-section">
                            <div class="name-container">
                            @item.Creator.FirstName
                                @item.Creator.LastName
                            </div>
                            <div class="d-flex flex-row languages-container">
                                @foreach (var skill in item.SelectedSkills)
                                {
                                    <div class="small-language-item">
                                        <div class="image-container">
                                            <img src="/@skill.Image" class="img-fluid" alt="" />
                                        </div>
                                        <label class="" for="">@skill.Name</label>
                                    </div>
                                }
                            </div>
                        </div>
                        <p>@item.Bio</p>
                    </div>
                }
            </div>
        </div>
    </div>
</main>

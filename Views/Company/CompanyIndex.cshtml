<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item mx-3 text-center">
                        <a class="nav-link  text-white btn btn-primary" asp-area="" asp-controller="Company"
                            asp-action="logOut">LogOut</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main>

    <div class="row">
        <div class="col-sm-3">
            <a class="btn btn-primary" href="/jobs/new">List a New Job Position</a>
        </div>
        <div class="col-sm-8 availableDev">

            @foreach (var item in ViewBag.AllDevs)
            {
                <div class="border border-secondary">

                    <div class="d-flex flex-row">
                        @foreach (var skill in item.SelectedSkills)
                        {
                            <div class="language-item" class="text-center">
                                <div class="image-container">
                                    <img src="@skill.Image" class="img-fluid" alt="" />
                                </div>
                                <label class="" for="">@skill.Name</label>
                            </div>
                        }
                    </div>



                    <h1>@item.Creator.FirstName</h1>
                    <h1>@item.Creator.LastName</h1>
                    <p>@item.Bio</p>




                </div>
            }

        </div>
    </div>

</main>
@model LoginCompany
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light p-2">
    <a class="navbar-brand" asp-area="" asp-controller="Company" asp-action="CompanyIndex">DevJobMatcher</a>
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-white btn btn-primary" asp-area="" asp-controller="Home" asp-action="LoginDev">Go
                to Developer Login</a>
        </li>
    </ul>
</nav>
<div class="body">
    <div class="container">
        <form id="login-form" action="/LoginCompany" method="post" class="mx-1 mx-md-4">
            <div class="form-content">
                <div class="login-form">
                    <div class="title">Welcome back!</div>
                    <div class="input-boxes">
                        <div class="input-box">
                            <input class="login-form-input" asp-for="Email" placeholder="Enter your email" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="input-box">
                            <input class="login-form-input" asp-for="Password" placeholder="Enter your password"
                                type="password" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="text">Don't hve an account?<a class="links" asp-controller="Company"
                                asp-action="RegisterCompany">Sign Up now</a></div>

                    </div>

                </div>
            </div>

            <button type="submit" class="login-button">Log In</button>

        </form>
    </div>
</div>

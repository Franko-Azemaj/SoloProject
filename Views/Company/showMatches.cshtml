<div class="header">

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light ">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item mx-3 text-center">
                <a class="logOutBtn nav-link  text-white btn btn-primary" asp-area="" asp-controller="Company"
                    asp-action="logOut">LogOut</a>
            </li>
            <li class="nav-item mx-3 text-center">
                <a class="logOutBtn nav-link  text-white btn btn-primary" asp-area="" asp-controller="Company"
                    asp-action="CompanyIndex">Index</a>
            </li>
        </ul>
    </nav>
</div>

<div class="body">
    <div class="content">
        @foreach (var item in ViewBag.Matches)
        {
            <div class="match-item  mb-2">
                <div class="top-section">
                    <div class="name-container">
                        @item.DevProfileMatched.Creator.FirstName
                        @item.DevProfileMatched.Creator.LastName
                    </div>
                    <div class="d-flex flex-row languages-container">
                        @foreach (var skill in item.DevProfileMatched.SelectedSkills)
                        {
                            <div class="small-language-item">
                                <div class="image-container">
                                    <img src="/@skill.Image" class="img-fluid" alt="" />
                                </div>
                                <label class="" for="">@skill.Name</label>
                            </div>
                        }
                    </div>
                </div>
                <div class="botton-section">
                    <div class="match ">
                    <p class="content-section">@item.DevProfileMatched.Bio</p>
                    <p class="match-btn">100% Match</p>
                    </div>
                    <div class="button-section">
                        <img class="imgContainer" src="/assets/message.png" alt="">
                        <a class="message-btn" href="">Message the developer</a>
                    </div>

                </div>
                

            </div>
        }
    </div>
</div>
